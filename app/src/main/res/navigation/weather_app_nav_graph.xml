<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_app_nav_graph"
    app:startDestination="@id/weatherListFragment">
    <fragment
        android:id="@+id/weatherListFragment"
        android:name="com.nerubia.weatheapp.ui.forecast.WeatherForecastFragment"
        android:label="WeatherListFragment"
        tools:layout="@layout/fragment_weather_list">
        <action
            android:id="@+id/action_weatherListFragment_to_weatherForecastFragment"
            app:destination="@id/weatherForecastFragment" />
    </fragment>
    <fragment
        android:id="@+id/weatherForecastFragment"
        android:name="com.nerubia.weatheapp.ui.details.WeatherForecastDetailsFragment"
        android:label="WeatherForecastFragment"
        tools:layout="@layout/fragment_weather_forecast">
        <argument
            android:name="argumentWeatherId"
            app:argType="string" />
    </fragment>
</navigation>